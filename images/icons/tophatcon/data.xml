<!DOCTYPE codename-engine-icon>
<icon scale="3" facing="right" antialiasing="false" offsetX="0" offsetY="0">
    <!-- neutral -->
    <anim name="neutral" anim="i00" looped="true" offsetY="-15" fps="7"/>
    <transition from="neutral" to="lose" anim="itol00" fps="10" offsetY="-15"/>
    <step percent="0" type="neutral"/>

    <!-- lose -->
    <anim name="losing" anim="l00" looped="true" offsetY="-15" fps="7"/>
    <transition from="losing" to="neutral" anim="outol00" fps="10" offsetY="-15"/>
    <step percent="80" type="lose"/>
</icon>