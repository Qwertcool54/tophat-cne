<!DOCTYPE codename-engine-icon>
<icon scale="3" facing="left" antialiasing="false" offsetX="0" offsetY="0">
    <!-- neutral -->
    <anim name="neutral" anim="i00" looped="true" offsetY="-15" fps="5"/>
    <transition from="neutral" to="winning" anim="itowin0" fps="10" offsetY="-15"/>
    <step percent="0" type="neutral"/>

    <!-- winning -->
    <anim name="winning" anim="confirm-hold0" looped="true" offsetY="-15" fps="5"/>
    <transition from="winning" to="neutral" anim="w00" fps="10" offsetY="-15"/>
    <step percent="80" type="winning"/>
   <!-- lose -->
    <anim name="losing" anim="l00" looped="true" offsetY="-15" fps="5"/>
    <transition from="losing" to="neutral" anim="outol00" fps="10" offsetY="-15"/>
    <step percent="40" type="lose"/>
</icon>